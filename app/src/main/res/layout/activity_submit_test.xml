<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.examinationsystem.ui.SubmitTestActivity">
    <TextView
        android:id="@+id/lblHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tech Giants"
        android:textSize="24pt"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/submited"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test successfully submited"
            android:gravity="center"
            android:textSize="12pt"
            android:textColor="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/txtMarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Obtained marks"
            android:gravity="center"
            android:textSize="10pt"
            android:textColor="@color/fbutton_color_alizarin"
            />
    </LinearLayout>
    <info.hoang8f.widget.FButton
        android:id="@+id/btnDone"
        android:layout_marginBottom="8dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Done"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:buttonColor="@color/colorPrimary"
        />
</RelativeLayout>
